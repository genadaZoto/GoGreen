


<div class="login">
    <form class="formulaire" action="/Home/Trip" method="post">
        <div class="text-center">
            <h2>Hi @ViewBag.Surname, <i class="far fa-user"></i></h2>
            <h1 class="h4 text-gray-900 mb-4">Calculate your green trip...</h1>
        </div>




        <div class="form-group">
            <label>From</label><input type="text" required class="form-control form-control-user" id="From" name="From" placeholder="Your starting point...">
        </div>
        <div class="form-group">
            <label>To</label><input type="text" required class="form-control form-control-user"  id="To" name="To"  placeholder="Your ending point...">
        </div>
      
        <input class="btn btn-primary btn-user btn-block" type="submit" value="Go..." />
        @*<hr>*@
       
    </form>
</div>
